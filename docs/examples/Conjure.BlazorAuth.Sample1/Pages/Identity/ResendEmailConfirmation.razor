<h3>Resend Email Confiramation</h3>

<div class="row">
<div class="col-md-6">


<div class="row">
	<div class="col-md-8">
		<p>
			Enter your email.
		</p>
		<hr />
		<EditForm Model=@_model OnValidSubmit=@DoResend>
			<DataAnnotationsValidator />
			<CustomValidator @ref=_customValidator />
			<ValidationSummary Model=@_model />

			<div class="form-group">
				<label for="username">Email</label>
				<InputText id="username" type="text" class="form-control" @bind-Value=_model.Email />
				<ValidationMessage For=@(() => _model.Email) />
			</div>
			<div class="form-group">
				<button class="btn btn-primary" type="submit">Resend</button>
			</div>
		</EditForm>
	</div>
</div>

</div>
</div>
