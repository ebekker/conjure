@namespace Conjure.BlazorKit.Controls
<PageTitle>@IsDirty@Label</PageTitle>
@if (_canExecute)
{
    <CascadingValue TValue=@IScreenContext Value=@this>
        <ScreenHeader>
            <TitleContent>@IsDirty@Label</TitleContent>
            <Actions>@Actions</Actions>
        </ScreenHeader>
        @ChildContent
    </CascadingValue>
}
else
{
    <b><i>[Access Denied]</i></b>
}
